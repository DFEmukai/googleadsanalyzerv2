# --- Database ---
# Cloud SQL (Private IP): postgresql+asyncpg://USER:PASS@PRIVATE_IP:5432/DB_NAME
DATABASE_URL=postgresql+asyncpg://appuser:password@10.x.x.x:5432/googleads_analyzer

# --- Google Ads API ---
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_CUSTOMER_ID=
GOOGLE_ADS_LOGIN_CUSTOMER_ID=

# --- Claude API (Anthropic) ---
ANTHROPIC_API_KEY=

# --- Chatwork API (Optional) ---
CHATWORK_API_TOKEN=
CHATWORK_ROOM_ID=
CHATWORK_ASSIGNEE_ID=
CHATWORK_MENTION_ID=

# --- Application URLs ---
# Frontend URL (used for CORS and Chatwork message links)
FRONTEND_URL=https://googleads-frontend-xxxxx-an.a.run.app
DASHBOARD_URL=https://googleads-frontend-xxxxx-an.a.run.app

# --- Safeguard Settings ---
MAX_CHANGES_PER_APPROVAL=10
MAX_BUDGET_CHANGE_PCT=20.0
ROLLBACK_WINDOW_HOURS=24

# --- Frontend (build-time only) ---
# Set via --build-arg when building the frontend Docker image
# NEXT_PUBLIC_API_URL=https://googleads-backend-xxxxx-an.a.run.app
